<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_layout_margin"
        app:cardCornerRadius="@dimen/cardview_cardCornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Chat list user image-->
            <ImageView
                android:id="@+id/image_view_chat_list_user"
                android:layout_width="@dimen/side_imageViewChatListUser"
                android:layout_height="@dimen/side_imageViewChatListUser"
                android:contentDescription="@string/desc_chat_list_user_image"
                android:src="@drawable/ic_account_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--Chat list user display name-->
            <TextView
                android:id="@+id/image_view_chat_list_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_chat_list_user_name"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_chat_list_user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_view_chat_list_user"
                app:layout_constraintTop_toTopOf="@+id/image_view_chat_list_user"
                tools:text="User Name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>